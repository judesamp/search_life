<div class="container">
  <div class="row">
    <div class="listed col-md-6 col-md-offset-3">
        <p>Click on a school to see more detailed information or click <a href="/schools/new">here</a> to create a new school.</p>
          <ul class="no_decoration list-group">
          <% @schools.each do |school| %>
            
            
              <li class="list-group-item">
                <a href="/schools/<%= school.id %>">
                  <%= school.name %>: <%= school.city %>, <%= school.state %> (<%= school.start_year %>-<%= school.end_year %>)  
                </a>
                  <a href="/schools/<%= school.id %>/edit" class="leftpadded pull-right">Edit</a>
                  <a href="/schools/<%= school.id %>" class="view_link pull-right">View</a>
              </li>

            
          <% end %>
        </ul>

          
    </div> 
  </div>
</div>




    

   





    
 