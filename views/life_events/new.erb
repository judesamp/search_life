<div class="listed col-md-6 col-md-offset-3">
  <div class="gray">
    <div class="marge">
      <h3>Create a New Life Event</h1>
    </div>
  </div>

  <div class="bottom">
    <div class="marge2">

      <form role="form" action="/life_events" method="post">

        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" name="[life_event]name" placeholder="Enter a name for your life event">
        </div>

        <div class="form-group">
          <label for="description">Enter a description of your life event</label>
          <input type="text" class="form-control" id="description" name="[life_event]description"placeholder="Enter event description">
        </div>

        <!-- ##### switch this out later for better form element -->
        
        <div class="form-group">
          <label for="city">Enter the name of the city where this event took place</label>
          <input type="text" class="form-control" id="city" name="[life_event]city" placeholder="Enter city name">
        </div>

        <div class="form-group">
          <label for="state">Enter the state where this event took place</label>
          <input type="text" class="form-control" id="state" name="[life_event]state" placeholder="Enter state name">
        </div>

        <div class="form-group">
          <label for="impact_rating">Enter a number (1-10) that represents the impact of this event</label>
          <input type="text" class="form-control" id="[life_event]impact_rating" name="[life_event]impact_rating" placeholder="Enter impact rating">
        </div>

         <div class="form-group">
          <label for="city">Enter the year when this life event occurred</label>
          <input type="text" class="form-control" id="year" name="[life_event]year" placeholder="Enter year">
        </div>
        
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
    </div>
  </div>
</div>